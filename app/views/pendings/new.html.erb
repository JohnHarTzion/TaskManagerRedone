<p style="font-size: 30px" align="center">New Task:</p>

<%= form_for @pending , :html => {:align => "center"} do |f| %>

  
  <%= f.label :task_name %>:<br>
  <%= f.text_field :task_name %><br>
 
  
  <%= f.label :task_time_in_minutes %>:<br>
  <%= f.text_field :task_time_in_minutes %><br>

  <%= f.label :status %><br>
  <%= f.text_field :status %><br>

  <%= f.submit "update" , class:"btn btn-default", type:"button" %>
<% end %>